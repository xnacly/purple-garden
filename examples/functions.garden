; vim: filetype=racket
(@fn
  ; name
  add3        
  ; arguments
  [arg1 arg2 arg3]
  ; body, last element is returned
  (+ 
    (+ arg1 arg2) arg3)  
)
(@println
  (add3 3.1415 3.1415 3.1415))

(@fn greeting [greetee] (@println "hello world to:" greetee))
(greeting "user")

;; tail calls
(@fn inc [x] (+ x 1))
(@fn call1 [x] (inc x))
(@fn call2 [x] (call1 x))
(@fn call3 [x] (call2 x))
(@fn call4 [x] (call3 x))
(@fn call5 [x] (call4 x))

(@println (call5 0))

(@fn hello [])
(hello)
